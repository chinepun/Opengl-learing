
static void gamePadMovement(GLFWwindow *window)
{
    int axesCount;
    const float *axes = glfwGetJoystickAxes(GLFW_JOYSTICK_1, &axesCount);
    std::cout << "\n\n\n\n\n\n\n" << sizeof(axes)
              << "axesCount = " << axesCount
              << "\nLeft Stick X Axis = " << axes[0] << "\n"
              << "Left Stick Y Axis = " << axes[1] << "\n"
              << "Right Stick X Axis = " << axes[2] << "\n"
              << "Right Stick Y Axis = " << axes[3] << "\n"
              << "Left Trigger(L2) = " << axes[4] << "\n"
              << "Right Trigger(R2) = " << axes[5] << "\n";
  //  if(axes[2] == -1)    glfwSetWindowShouldClose(window, true);
    int buttonCount;
    const unsigned char* buttons = glfwGetJoystickButtons(GLFW_JOYSTICK_1, &buttonCount);
    if (buttons[0] == GLFW_PRESS)   std::cout << "X pressed\n";
    else if (buttons[0] == GLFW_RELEASE)   std::cout << "X realeasedd\n";
    const char *name = glfwGetJoystickName(GLFW_JOYSTICK_1);
    std::cout << "\nYour joystick is called " << name << std::endl;
}
